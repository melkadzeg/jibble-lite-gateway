{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "SecretKey": "E3F2C1A8-7B5F-4D91-9B84-5A26D6784F12-3E6D4C8F9A0B7C2E1D5F6A8B3C4D9E2",
    "Issuer": "https://localhost:5007",
    "Audience": "https://localhost:5007"
  },
  "ReverseProxy": {
    "Routes": {
      "auth": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/auth/{**catch-all}" },
        "Transforms": [ { "PathPattern": "/{**catch-all}" } ]
      },
      "client": {
        "ClusterId": "client-cluster",
        "Match": { "Path": "/client/{**catch-all}" },
        "AuthorizationPolicy": "edge-auth",
        "Transforms": [ { "PathPattern": "/{**catch-all}" } ]
      },
      "time": {
        "ClusterId": "time-cluster",
        "Match": { "Path": "/time/{**catch-all}" },
        "AuthorizationPolicy": "edge-auth",
        "Transforms": [ { "PathPattern": "/{**catch-all}" } ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5201/" }
        }
      },
      "client-cluster": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5301/" }
        }
      },
      "time-cluster": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5401/" }
        }
      }
    }
  }

}